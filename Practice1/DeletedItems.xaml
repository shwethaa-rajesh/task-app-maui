<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practice1.DeletedItems"
             xmlns:viewmodel="clr-namespace:Practice1.ViewModel"
             x:DataType="viewmodel:DeletedTasksViewModel"
             Title="DeletedItems">
    <VerticalStackLayout>

        <Label Text="Deleted Tasks" HorizontalOptions="Center" Margin="0,20" FontSize="Title"></Label>
        <CollectionView ItemsSource="{Binding DeletedItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String }">

                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItem Text="Restore" BackgroundColor="Green"></SwipeItem>

                        </SwipeView.LeftItems>
                        <Frame>
                            <Label Text="{Binding .}" VerticalOptions="Center" ></Label>

                        </Frame>

                    </SwipeView>
                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>
        <Button Text="Check all deleted items" WidthRequest="200" Margin="10"></Button>
    </VerticalStackLayout>
</ContentPage>
